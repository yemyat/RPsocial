<div id ="sign_in" class="home_page">
  <ul id ="nav">
    <li class ="current_tab"><h3><%= link_to "Sign in", sign_in_path %></h3></li>
    <li> <h3><%= link_to "Sign up", sign_up_path %></h3></li>
  </ul>
  <div class ="form">
  <% semantic_form_for :session, :url => session_path do |form| %>
    <% form.inputs do %>
      <%= form.input :email %>
      <%= form.input :password, :as => :password %>
    <% end %>
    <% form.buttons do %>
      <%= form.commit_button "Sign in" %>
      <p style=""><%= link_to "Forgot password?", new_password_path %></p>
    <% end %>
  <% end %>
  </div>

</div>